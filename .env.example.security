# Security Configuration Examples
# Add these to your .env file

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_CHECK_COMMON=true

# Session Security
SESSION_TIMEOUT=1800
SESSION_ENFORCE_SINGLE=false

# Brute Force Protection
BRUTE_FORCE_MAX_ATTEMPTS=5
BRUTE_FORCE_DECAY_MINUTES=15

# IP Whitelist (comma-separated)
IP_WHITELIST=

# Security Headers
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_X_FRAME_OPTIONS_ENABLED=true
SECURITY_X_FRAME_OPTIONS_VALUE=SAMEORIGIN
SECURITY_CSP_ENABLED=false

# Two-Factor Authentication
2FA_ENFORCE=false
2FA_ENFORCE_FOR_ROLES=super-admin,admin

# reCAPTCHA v2
RECAPTCHA_ENABLED=false
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# reCAPTCHA v3
RECAPTCHA_V3_ENABLED=false
RECAPTCHA_V3_SITE_KEY=
RECAPTCHA_V3_SECRET_KEY=

# hCaptcha
HCAPTCHA_ENABLED=false
HCAPTCHA_SITE_KEY=
HCAPTCHA_SECRET_KEY=

# Twilio (for SMS 2FA)
TWILIO_ENABLED=false
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# GDPR
APP_PRIVACY_POLICY_VERSION=1.0
APP_TERMS_VERSION=1.0
